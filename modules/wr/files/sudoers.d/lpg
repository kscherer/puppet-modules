   /*/*/layers/oe-core/scripts/runqemu-ifup, /*/*/layers/oe-core/scripts/runqemu-ifdown, \
   /*/*/*/layers/oe-core/scripts/runqemu-ifup, /*/*/*/layers/oe-core/scripts/runqemu-ifdown, \
   /*/*/*/*/layers/oe-core/scripts/runqemu-ifup, /*/*/*/*/layers/oe-core/scripts/runqemu-ifdown

LINUXGROUP ALL=NOPASSWD: LINUXCOMMANDS
