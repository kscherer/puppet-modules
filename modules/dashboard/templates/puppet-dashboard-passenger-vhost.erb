Listen <%= port %>

<VirtualHost *:<%= port %>>
  ServerName <%= name %>
  DocumentRoot <%= docroot %>
  RailsBaseURI /
  <Directory <%= docroot %>>
    Options None
    AllowOverride AuthConfig
    Order allow,deny
    allow from all
  </Directory>
  ErrorLog /var/log/<%= apache_name %>/<%= name %>_error.log
  LogLevel warn
  CustomLog /var/log/<%= apache_name %>/<%= name %>_access.log combined
  ServerSignature On
</VirtualHost>

